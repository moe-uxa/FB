@model IEnumerable<eRAMO.FB.Model.AdminUser>

@{
    ViewBag.Title = "List";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">System Administrators</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Show All Administrators
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover data-table" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                @*<th>
                                    @Html.DisplayNameFor(model => model.RoleNames)
                                </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.IsSuperAdmin)<span class="text-info"> click on icon to change</span>
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsDisabled)<span class="text-info"> click on icon to change</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.RoleNames)
                                    </td>*@
                                    <td>
                                        @if (item.IsSuperAdmin)
                                        {
                                            <a href="/Account/ChangeRole/@item.UserID" class="center" style="color:green; font-size:x-large;"><i class="fa fa-check"></i></a>
                                        }
                                        else
                                        {
                                            <a href="/Account/ChangeRole/@item.UserID" class="center" style="color:red; font-size:x-large;"><i class="fa fa-times"></i></a>
                                        }


                                    </td>
                                    <td>
                                        @if (item.IsDisabled)
                                        {
                                            <a href="/Account/ChangeLock/@item.UserID" class="center" style="color:red; font-size:x-large;"><i class="fa fa-lock"></i></a>
                                        }
                                        else
                                        {
                                            <a href="/Account/ChangeLock/@item.UserID" class="center" style="color:green; font-size:x-large;"><i class="fa fa-unlock"></i></a>
                                        }

                                        @if (TempData["NewPasswordUserId"] != null)
                                        {
                                            if (TempData["NewPasswordUserId"].ToString() == item.UserID.ToString())
                                            {
                                                <span><b>New Password:</b> @TempData["NewPassword"]</span>
                                            }
                                        }


                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
