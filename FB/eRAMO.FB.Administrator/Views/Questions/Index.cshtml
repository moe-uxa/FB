@model IEnumerable<eRAMO.FB.Model.QuestionsModel>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">QuestionsModel</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Show All QuestionsModel Items
                <div class="pull-right">
                    @Html.ActionLink("Create New", "Create")
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover data-table" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.QuestionInformationID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Text)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Justification)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ExpectedDuration)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Weight)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Notes)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ParentID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ParentTypeID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.QuestionPoolID)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.QuestionInformationID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Text)
                                    </td>
                                    <td>
                                        @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => item.Justification).ToString()))
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ExpectedDuration)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Weight)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Notes)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ParentID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ParentTypeID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.QuestionPoolID)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id=item.QuestionID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id=item.QuestionID }, new { onclick = "return confirmDeleteAction();" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
